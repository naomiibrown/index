const perPage = 3;
let currentPage = 1;
const productsDiv = document.getElementById("products");
const prevBtn = document.getElementById("prev");
const nextBtn = document.getElementById("next");
const pageSpan = document.getElementById("page");

function showProducts() {
  const start = (currentPage - 1) * perPage;
  const end = start + perPage;
  const pageProducts = products.slice(start, end);

  productsDiv.innerHTML = pageProducts
    .map(
      (product) => `
        <div class="product">
            <img src="${product.img}" alt="${product.name}">
            <div class="product-info">
                <h3>${product.name}</h3>
                <p>${product.desc}</p>
            </div>
            <div class="price">â‚¹${product.price.toLocaleString()}</div>
        </div>
    `
    )
    .join("");

  pageSpan.textContent = `Page ${currentPage} of ${Math.ceil(
    products.length / perPage
  )}`;
  prevBtn.disabled = currentPage === 1;
  nextBtn.disabled = currentPage === Math.ceil(products.length / perPage);
}

prevBtn.addEventListener("click", () => {
  if (currentPage > 1) {
    currentPage--;
    showProducts();
  }
});

nextBtn.addEventListener("click", () => {
  if (currentPage < Math.ceil(products.length / perPage)) {
    currentPage++;
    showProducts();
  }
});

showProducts();
